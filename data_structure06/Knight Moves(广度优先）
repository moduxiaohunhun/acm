#include <iostream>
#include <string>
#include <sstream>
#include <algorithm>
#include <cstdio>
#include <cstring>
using namespace std;
int c[27][6];
char str[6];
void  zuhenumber()
{
    c[0][0]=1;
    for(int i=1;i<=26;i++)
    {
        c[i][0]=1;
        for(int j=1;j<=5;j++)
        {
            c[i][j]=c[i-1][j]+c[i-1][j-1];
        }
    }
}
int main()
{
    zuhenumber();
    int flag;
    while(cin>>str)
    {
        flag=1;
        int sum=1;
        int k=strlen(str);
        for(int i=1;i<k;i++)
        {
            if(str[i]<=str[i-1])
            {
                cout<<"0"<<endl;
                flag=0;
                break;
            }
        }
        for(int i=1;i<k;i++)
        {
            sum+=c[26][i];
        }
        char ch='a';
        *********************************
        for(int i=0;i<k;i++)
        {
            for(;ch<str[i];ch++)
            {
                sum+=c['z'-ch][k-i-1];
            }
            ch++;
        }
        ***************************************除了巧妙，我还能说啥，8行代码解决我数十行的困惑，牛皮
        if(flag)
        {
            cout<<sum<<endl;
        }
    }
}
