问题：不输出任何结果，一秒后直接结束。。。。。。。。难受.jpg
#include <iostream>
#include <cstdio>
#include <algorithm>
#include <cstring>
using namespace std;
char area[13][4][3];
int sum[13];
int main()
{
    char ch='\0';
    memset(sum,4,sizeof(sum));
    for(int i=3; i>=0; i--)
    {
        for(int j=12; j>=0; j--)
        {
            cin>>area[j][i][0]>>area[j][i][1];
            area[j][i][2]='\0';
        }
    }
    ch=area[12][0][0];
    int k=12;
    int time=0;
    sum[12]=3;
    while(sum[12]>0)
    {
        if(ch>='0'&&ch<='9')
        {
            k=ch-'0'-1;
        }
        else if(ch=='A')
        {
            k=0;
        }
        else if(ch=='T')
        {
            k=9;
        }
        else if(ch=='J')
        {
            k=10;
        }
        else if(ch=='Q')
        {
            k=11;
        }
        else if(ch=='K')
        {
            k=12;
        }
        int b=4-sum[k];
        ch=area[k][b][0];
        sum[k]--;
        time++;
    }
    cout<<time<<","<<endl;
    return 0;
}
