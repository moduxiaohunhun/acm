问题：c[i]里面只存了a[i]，。。。。。。。//问题已经解决
#include <iostream>
#include <cstdio>
#include <string>
#include <cstring>
using namespace std;
string a[3000];
string b[3000];
string c[3000];
string d[3000];
int main()
{
    int essaynum,wordnum;
    cin>>essaynum>>wordnum;
    for(int i=0; i<wordnum; i++)
    {
        cin>>a[i]>>b[i];
    }
    for(int j=0; j<essaynum; j++)
    {
        cin>>d[j];
    }
    for(int i=0; i<wordnum; i++)
    {
        if(a[i].length()<=b[i].length())
        {
            c[i]=a[i];
        }
        else if(a[i].length()>b[i].length())
        {
            c[i]=b[i];
        }
    }
    for(int j=0; j<essaynum; j++)
    {
        for(int i=0; i<wordnum; i++)
        {
       *************************************************error:改为a[i]==d[i],再改一下输出格式就OK了
            if(c[i]==d[j])
            {
                cout<<c[i]<<" ";
                break;
            }
        }
    }
    cout<<endl;
    return 0;
}
